<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="3dp">

    <ImageView
        android:id="@+id/normal_notification_image"
        android:layout_width="67dp"
        android:layout_height="match_parent"
        android:src="@mipmap/like" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/normal_notification_title"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="9"
                android:gravity="center"
                android:singleLine="true"
                android:text="title"
                android:textColor="#000000" />

            <ImageView
                android:id="@+id/cancel_notification"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@mipmap/cancel_notification" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/normal_notification_last"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/last"/>
            <!--<CheckBox
                android:id="@+id/normal_notification_stop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:button="@mipmap/stop"
                />-->
            <ImageView
                android:id="@+id/normal_notification_stop"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:src="@mipmap/stop"/>

            <ImageView
                android:id="@+id/normal_notification_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/next"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>